<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="40dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="20dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:visibility="visible" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_weight="4"
        android:background="@drawable/left_gray_line"
        android:minWidth="90dp"
        android:orientation="vertical"
        android:paddingRight="7dp" >

        <TextView
            android:id="@+id/orderNumberLabelTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ordernumlabel"
            android:textSize="32dp"
            android:width="125dp" />

        <TextView
            android:id="@+id/OrderNumberTextView"
            android:layout_width="fill_parent"
            android:layout_height="68dp"
            android:textSize="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageProgressIcon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/ico_progress" />

            <TextView
                android:id="@+id/inProgressTextView"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:text="status"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/ImageShipmentIcon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/ico_progress" />

            <TextView
                android:id="@+id/partialShipmentTextView"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:text="partial ship."
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/itemNumberInOrderTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Item n of m"
            android:textSize="14sp" />

        </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/productLayout"
            android:layout_width="316dp"
            android:layout_height="match_parent"
            android:layout_weight="0.31"
            android:minWidth="110dp"
            android:orientation="vertical"
            android:paddingLeft="15dp" >

            <TextView
                android:id="@+id/SKUTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="SKU #"
                android:textSize="26sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/NameTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:text="Product Name"
                android:textSize="28sp"
                android:width="120dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/qtyToPickTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Qty to pick: "
                        android:textColor="#33b5e5"
                        android:textSize="18sp"
                        android:width="120dp" />

                    <TextView
                        android:id="@+id/qtyPickedTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Qty picked: "
                        android:textColor="#ff4444"
                        android:textSize="18sp"
                        android:width="120dp" />

                    <TextView
                        android:id="@+id/aisleTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Aisle: "
                        android:textSize="18sp"
                        android:width="120dp" />

                    <TextView
                        android:id="@+id/shelfUnitTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Self unit: "
                        android:textSize="18sp"
                        android:width="120dp" />

                    <TextView
                        android:id="@+id/shelfTextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Self: "
                        android:textSize="18sp"
                        android:width="120dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageProduct"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:maxHeight="82dp"
                        android:maxWidth="60dp"
                        android:src="@drawable/no_image" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/confirmProductPicking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#346600"
            android:orientation="vertical"
            android:padding="15dp"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/skuPickedProduct"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SKU #"
                android:textColor="#99cc00"
                android:textSize="32sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal|center"
                android:height="44dp"
                android:text="Successfully picked"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/numberOfProductsToPick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:text="3"
                    android:textSize="100sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="items" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>

</FrameLayout>
